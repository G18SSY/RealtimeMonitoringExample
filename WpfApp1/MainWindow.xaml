<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#292929" Foreground="White">
    <Window.DataContext>
        <local:RealtimeMonitorViewModel/>
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="10">
            <CheckBox IsChecked="{Binding SmoothScroll}">Smooth scroll</CheckBox>
        </StackPanel>
        
        <oxy:PlotView Background="#292929" Model="{Binding Model}" Controller="{Binding Controller}"/>
    </DockPanel>
</Window>
